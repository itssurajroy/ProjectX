rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    // WATCH2GETHER ROOMS
    // A user can read/write to a room if they are a member of that room.
    // Membership is determined by checking for their UID in the room's 'users' subcollection.
    match /watch2gether_rooms/{roomId} {
      allow read, update, delete: if isSignedIn() && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid));
      allow create: if isSignedIn();

      // Room Users subcollection
      // Allow users to join a room (create their own user doc)
      // Allow users to leave a room (delete their own user doc)
      // Allow any member of the room to read the user list
      match /users/{userId} {
        allow read: if isSignedIn() && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid));
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow delete: if isSignedIn() && request.auth.uid == userId;
      }
      
      // Chat Messages subcollection
      // Allow any member of the room to read and send messages.
      match /messages/{messageId} {
        allow read, create: if isSignedIn() && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid));
        allow update, delete: if false; // Disallow editing/deleting for now
      }
    }
    
    // COMMENTS
    match /comments/{animeId} {
        // General anime comments
        match /general/{messageId} {
            allow read: if true;
            allow create: if isSignedIn();
            allow update, delete: if false; // Future: allow if user is author
        }
        // Episode-specific comments
        match /episodes/{episodeId}/messages/{messageId} {
             allow get, list: if true;
             allow create: if isSignedIn();
             allow update, delete: if false; // Future: allow if user is author
        }
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /anime/{animeId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
