
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ╔══════════════════════════════════════════════════════════╗
    // ║                    PUBLIC READ ACCESS                    ║
    // ╚══════════════════════════════════════════════════════════╝
    // Everyone can read anime data, episodes, servers, sources (scraping-safe)
    match /anime/{animeId} {
      allow read: if true;
      allow write: if false;
    }
    match /episodes/{episodeId} {
      allow read: if true;
      allow write: if false;
    }
    match /servers/{serverId} {
      allow read: if true;
      allow write: if false;
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                       USER DATA                         ║
    // ╚══════════════════════════════════════════════════════════╝
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      
      // Subcollections
      match /watchlist/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /history/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /notifications/{notifId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                      COMMENTS SYSTEM                     ║
    // ╚══════════════════════════════════════════════════════════╝
    // General anime comments (Corrected Path)
    match /comments/{animeId}/general/{messageId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false; // Future: allow if user is author
    }
    // Episode-specific comments
    match /comments/{animeId}/episodes/{episodeId}/messages/{messageId} {
         allow read: if true;
         allow create: if request.auth != null;
         allow update, delete: if false; // Future: allow if user is author
    }
    

    // ╔══════════════════════════════════════════════════════════╗
    // ║                     REPORTS & APPEALS                    ║
    // ╚══════════════════════════════════════════════════════════╝
    match /reports/{reportId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow update: if isAdmin();
    }
    match /appeals/{appealId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                   MODERATION & BANS                      ║
    // ╚══════════════════════════════════════════════════════════╝
    match /bans/{userId} {
      allow read, write: if isAdmin();
    }
    match /warnings/{warningId} {
      allow read: if request.auth != null && (resource.data.targetUserId == request.auth.uid || isAdmin());
      allow create, update: if isAdmin();
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                   WATCH2GETHER ROOMS                     ║
    // ╚══════════════════════════════════════════════════════════╝
    match /watch2gether_rooms/{roomId} {
      // Anyone can read room details to see what's playing
      allow read: if true;
      // Logged-in users can create rooms
      allow create: if request.auth != null;
      // Only the host can update or delete the room
      allow update, delete: if request.auth != null && (resource.data.hostId == request.auth.uid || isAdmin());

      // Room Users subcollection
      match /users/{userId} {
        // Any signed-in user can read the list of participants
        allow read: if request.auth != null;
        // A user can only add or remove themselves from the room
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Chat Messages subcollection
      match /messages/{messageId} {
        // Any member of the room can read messages
        allow read: if request.auth != null && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid));
        // A member can only create messages as themselves
        allow create: if request.auth != null 
                      && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid))
                      && request.resource.data.userId == request.auth.uid;
        // Disallow editing/deleting for simplicity
        allow update, delete: if false; 
      }
    }


    // ╔══════════════════════════════════════════════════════════╗
    // ║                     ADMIN ONLY                           ║
    // ╚══════════════════════════════════════════════════════════╝
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    match /settings/site {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                     HELPER FUNCTIONS                     ║
    // ╚══════════════════════════════════════════════════════════╝
    function isAdmin() {
      // In a real app, you would check for a custom claim or a document in an admins collection.
      // For now, this is a placeholder. It checks for a custom claim.
      return request.auth != null && request.auth.token.admin == true;
    }
  }
}
