rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // === COMMENTS (anime detail + episode pages) ===
    match /comments/{animeId}/{commentId} {
      allow read: if true;  // everyone can read comments
      allow create: if request.auth != null 
                    && request.resource.data.text is string
                    && request.resource.data.text.size() <= 1000;
      allow update: if request.auth != null 
                    && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null 
                    && resource.data.userId == request.auth.uid;
    }

    // === USER PROFILES & STATS (gamification) ===
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // === WATCH HISTORY / CONTINUE WATCHING ===
    match /watchHistory/{userId}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // === FORUM THREADS & REPLIES (if you add full forum later) ===
    match /forum/{category}/{threadId} {
      allow read: if true;
      allow create, update: if request.auth != null;
    }

    // === ANYTHING ELSE (temporary safe fallback) ===
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
