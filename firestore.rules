
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if a user is an admin
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Helper function to check if a user is a moderator or admin
    function isModeratorOrAdmin() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isAdmin() || userRole == 'moderator';
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                         ADMIN DATA                       ║
    // ╚══════════════════════════════════════════════════════════╝

    // All admin collections are only accessible by admins
    match /admin/{section=**} {
      allow read, write: if isModeratorOrAdmin();
    }
    
    // Admins can manage other admin/moderator roles.
    match /admins/{userId} {
       allow read, write: if isAdmin();
    }
    
    // Allow any signed-in user to create reports and requests
    match /admin/reports/{docId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isModeratorOrAdmin();
    }
    match /admin/requests/{docId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isModeratorOrAdmin();
    }
    
    // ╔══════════════════════════════════════════════════════════╗
    // ║                      USER-FACING DATA                    ║
    // ╚══════════════════════════════════════════════════════════╝

    // User Data: Users can read/write their own data. Admins can read anyone's data.
    match /users/{userId}/{document=**} {
      allow read: if (isSignedIn() && request.auth.uid == userId) || isModeratorOrAdmin();
      allow write: if isSignedIn() && request.auth.uid == userId;
      // Admins can update roles, ban status, etc.
      allow update: if isModeratorOrAdmin();
    }
    
    // Comments: Publicly readable, users can create their own. Mods/Admins can delete.
    match /comments/{path=**}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isModeratorOrAdmin();
      // Users can only edit/delete their own comments within a time limit (future)
      allow update: if false; 
    }
    
    match /comments/{animeId}/general/messages/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isModeratorOrAdmin();
        allow update: if false;
    }
    
    // Notifications: Users can only access their own.
    match /notifications/{userId}/items/{notificationId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
