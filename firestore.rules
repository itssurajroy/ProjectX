
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own profile and sub-collections.
    match /users/{userId}/{documents=**} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Anime data is public to read, but write is restricted.
    match /anime/{animeId} {
      allow read: if true;
      allow write: if false; // Consider admin-only rule: allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Comments can be read by anyone, but only created, updated, or deleted by authenticated users for their own comments.
    match /comments/{path=**}/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Watch Together rooms can be read by anyone, but only created by auth'd users.
    // Host should have full control. Others can be limited.
    match /watch2gether_rooms/{roomId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && (request.auth.uid == resource.data.hostId || request.auth.uid in resource.data.participants);
    }
    
    match /watch2gether_rooms/{roomId}/{subcollection}/{docId} {
       allow read: if true;
       allow write: if request.auth != null; // Simplistic rule, can be refined based on host vs participant
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
