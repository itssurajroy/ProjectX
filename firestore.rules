
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Only authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin-only collections
    match /adminRoles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/adminRoles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminRoles/$(request.auth.uid)).data.role == "superadmin";
    }

    // Public anime data
    match /anime/{animeId} {
      allow read: if true;
      allow write: if false; // Only admins should write
    }

    // Comments are public to read, but only auth'd users can write
    match /comments/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Watch together rooms can be read by anyone, but only auth'd users can interact
    match /watch2gether_rooms/{roomId}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default deny all other collections for security
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}

    