rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if a user is an admin
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                         ADMIN DATA                       ║
    // ╚══════════════════════════════════════════════════════════╝

    // All admin collections are only accessible by admins
    match /admin/{section=**} {
      allow read, write: if isAdmin();
    }

    // Publicly readable announcements
    match /admin/announcements/{docId} {
      allow read: if resource.data.active == true;
      allow write: if isAdmin();
    }

    // Allow any signed-in user to create reports and requests
    match /admin/reports/{docId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }
    match /admin/requests/{docId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }
    
    // ╔══════════════════════════════════════════════════════════╗
    // ║                      USER-FACING DATA                    ║
    // ╚══════════════════════════════════════════════════════════╝

    // Comments: Publicly readable, users can create their own.
    match /comments/{path=**}/messages/{messageId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false; // Future: allow if resource.data.authorId == request.auth.uid
    }
    
    // Notifications: Users can only access their own.
    match /notifications/{userId}/items/{notificationId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // User-specific data (watchlist, history, etc)
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Admin role management. Only other admins can manage roles.
    match /admins/{userId} {
       allow read, write: if isAdmin();
    }
  }
}
