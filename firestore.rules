
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isIncrement(field) {
      return request.resource.data[field] == resource.data[field] + 1;
    }


    // ╔══════════════════════════════════════════════════════════╗
    // ║                       USER DATA                         ║
    // ╚══════════════════════════════════════════════════════════╝
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if isSignedIn();
      
      match /watchlist/{entryId} {
        allow read, write: if isOwner(userId);
      }
      match /history/{animeId} {
        allow read, write: if isOwner(userId);
      }
      match /notifications/{notifId} {
        allow read, write: if isOwner(userId);
      }
       match /forumProfile/{docId} {
        allow read: if true;
        // Only allow user to update their own profile, but don't let them set XP/level
        allow write: if isOwner(userId)
                    && !(request.resource.data.xp != resource.data.xp)
                    && !(request.resource.data.level != resource.data.level);
      }
    }
    
    // ╔══════════════════════════════════════════════════════════╗
    // ║                   WATCH2GETHER ROOMS                     ║
    // ╚══════════════════════════════════════════════════════════╝
    match /watch2gether_rooms/{roomId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.hostId == request.auth.uid || isAdmin());

      match /users/{userId} {
        allow read: if isSignedIn();
        allow create, delete: if isOwner(userId);
      }
      
      match /messages/{messageId} {
        allow read: if isSignedIn() && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid));
        allow create: if isSignedIn() 
                      && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid))
                      && request.resource.data.userId == request.auth.uid;
        allow update, delete: if false; 
      }
    }
    
    // ╔══════════════════════════════════════════════════════════╗
    // ║                      COMMENTS SYSTEM                     ║
    // ╚══════════════════════════════════════════════════════════╝
    match /comments/{animeId}/general/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isAdmin();
    }
    match /comments/{animeId}/episodes/{episodeId}/messages/{messageId} {
         allow read: if true;
         allow create: if isSignedIn();
         allow update, delete: if isAdmin();
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                         FORUM                            ║
    // ╚══════════════════════════════════════════════════════════╝
    match /forum_categories/{categoryId} {
        allow list, read: if true;
        allow write: if isAdmin();
    }
    match /forum_threads/{threadId} {
        allow list, read: if true;
        allow create: if isSignedIn();
        allow update: if (isOwner(request.resource.data.authorId) && !resource.data.isLocked) 
                      || (isSignedIn() && (isIncrement('upvotes') || isIncrement('downvotes')))
                      || isAdmin();
        allow delete: if isAdmin();
    }
    match /forum_threads/{threadId}/replies/{replyId} {
        allow list, read: if true;
        allow create: if isSignedIn() && !get(/databases/$(database)/documents/forum_threads/$(threadId)).data.isLocked;
        allow update: if isOwner(request.resource.data.authorId) 
                      || (isSignedIn() && (isIncrement('upvotes') || isIncrement('downvotes')))
                      || isAdmin();
        allow delete: if isAdmin();
    }
    
    match /forum_chat/{messageId} {
      allow read, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(request.resource.data.userId) || isAdmin();
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                 REPORTS, ADMIN, ETC.                     ║
    // ╚══════════════════════════════════════════════════════════╝
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /reports/{reportId} {
        allow read, update: if isAdmin();
        allow create: if isSignedIn();
    }

    match /appeals/{appealId} {
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isAdmin();
    }

    match /bans/{userId} {
        allow read, write: if isAdmin();
    }
    
    match /warnings/{warningId} {
        allow read: if isAdmin() || (isSignedIn() && resource.data.targetUserId == request.auth.uid);
        allow create, update: if isAdmin();
    }


    // ╔══════════════════════════════════════════════════════════╗
    // ║                   PUBLIC ANIME DATA                      ║
    // ╚══════════════════════════════════════════════════════════╝
    match /anime/{animeId} {
      allow read: if true;
      allow write: if false; // Should only be updated by a backend process
    }
  }
}
