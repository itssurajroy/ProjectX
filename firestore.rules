
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // In a real app, you would check for a custom claim or a document in an admins collection.
      // For now, this is a placeholder. It checks for a custom claim.
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }


    // ╔══════════════════════════════════════════════════════════╗
    // ║                       USER DATA                         ║
    // ╚══════════════════════════════════════════════════════════╝
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if isSignedIn();
      
      // Subcollections for user-specific data like watchlist, history, notifications
      match /watchlist/{entryId} {
        allow read, write: if isOwner(userId);
      }
      match /history/{animeId} {
        allow read, write: if isOwner(userId);
      }
      match /notifications/{notifId} {
        allow read, write: if isOwner(userId);
      }
       match /forumProfile/{docId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }
    }
    
    // ╔══════════════════════════════════════════════════════════╗
    // ║                   WATCH2GETHER ROOMS                     ║
    // ╚══════════════════════════════════════════════════════════╝
    match /watch2gether_rooms/{roomId} {
      // Anyone can read room details to see what's playing
      allow read: if true;
      // Logged-in users can create rooms
      allow create: if isSignedIn();
      // Only the host can update or delete the room
      allow update, delete: if isSignedIn() && (resource.data.hostId == request.auth.uid || isAdmin());

      // Room Users subcollection
      match /users/{userId} {
        // Any signed-in user can read the list of participants
        allow read: if isSignedIn();
        // A user can only add or remove themselves from the room
        allow create, delete: if isOwner(userId);
      }
      
      // Chat Messages subcollection
      match /messages/{messageId} {
        // Any member of the room can read messages
        allow read: if isSignedIn() && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid));
        // A member can only create messages as themselves
        allow create: if isSignedIn() 
                      && exists(/databases/$(database)/documents/watch2gether_rooms/$(roomId)/users/$(request.auth.uid))
                      && request.resource.data.userId == request.auth.uid;
        // Disallow editing/deleting for simplicity
        allow update, delete: if false; 
      }
    }
    
    // ╔══════════════════════════════════════════════════════════╗
    // ║                      COMMENTS SYSTEM                     ║
    // ╚══════════════════════════════════════════════════════════╝
    // General anime comments
    match /comments/{animeId}/general/{messageId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isAdmin(); // Only admins can moderate
    }
    // Episode-specific comments
    match /comments/{animeId}/episodes/{episodeId}/messages/{messageId} {
         allow read: if true;
         allow create: if isSignedIn();
         allow update, delete: if isAdmin(); // Only admins can moderate
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                         FORUM                            ║
    // ╚══════════════════════════════════════════════════════════╝
    match /forum_categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin(); // Only admins can create/edit categories
    }
    match /forum_threads/{threadId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if (isOwner(request.resource.data.authorId) && !resource.data.isLocked) || isAdmin();
        allow delete: if isAdmin();
    }
    match /forum_threads/{threadId}/replies/{replyId} {
        allow read: if true;
        allow create: if isSignedIn() && !get(/databases/$(database)/documents/forum_threads/$(threadId)).data.isLocked;
        allow update: if isOwner(request.resource.data.authorId) || isAdmin();
        allow delete: if isAdmin();
    }
    
    // Global Forum Chat
    match /forum_chat/{messageId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(request.resource.data.userId) || isAdmin();
    }

    // ╔══════════════════════════════════════════════════════════╗
    // ║                 REPORTS, ADMIN, ETC.                     ║
    // ╚══════════════════════════════════════════════════════════╝
     // Secure admin collections
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Public can create reports, but only admins can manage them
    match /reports/{reportId} {
        allow read, update: if isAdmin();
        allow create: if isSignedIn();
    }

    // Users can create and view their own appeals, admins can manage all.
    match /appeals/{appealId} {
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isAdmin();
    }

    // Only admins can manage bans and warnings
    match /bans/{userId} {
        allow read, write: if isAdmin();
    }
    
    match /warnings/{warningId} {
        allow read: if isAdmin() || (isSignedIn() && resource.data.targetUserId == request.auth.uid);
        allow create, update: if isAdmin();
    }


    // ╔══════════════════════════════════════════════════════════╗
    // ║                   PUBLIC ANIME DATA                      ║
    // ╚══════════════════════════════════════════════════════════╝
    match /anime/{animeId} {
      allow read: if true;
      allow write: if false; // Should only be updated by a backend process
    }
  }
}
